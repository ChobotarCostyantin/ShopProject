{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "orders-route": {
        "ClusterId": "orders-api",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },
      "catalog-route": {
        "ClusterId": "catalog-api",
        "Match": {
          "Path": "/api/catalog/{**catch-all}"
        }
      },
      "social-route": {
        "ClusterId": "social-and-reviews-api",
        "Match": {
          "Path": "/api/social-and-reviews/{**catch-all}"
        }
      },
      "aggregator-route": {
        "ClusterId": "aggregator",
        "Match": {
          "Path": "/api/aggregator/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "orders-api": {
        "Destinations": {
          "destination1": {
            "Address": "http://orders-api"
          }
        }
      },
      "catalog-api": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalog-api"
          }
        }
      },
      "social-and-reviews-api": {
        "Destinations": {
          "destination1": {
            "Address": "http://social-and-reviews-api"
          }
        }
      },
      "aggregator": {
        "Destinations": {
          "destination1": {
            "Address": "http://aggregator"
          }
        }
      }
    }
  }
}